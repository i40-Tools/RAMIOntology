    #   sh:path rami:semanticId ;
	  #   sh:nodeKind sh:IRI ;
    #   sh:minCount 0 ; # optional?
    #   sh:severity sh:Violation ;
    #   sh:message "Each submodel must have at least one semanticId attribute."@en ;
    # ] .
