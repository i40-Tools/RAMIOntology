@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix rami: <https://w3id.org/i40/rami#> .

<#ConceptDictionaryShape>
    a sh:NodeShape ;
    sh:targetClass rami:Asset ;
    sh:property [
      sh:path rdf:type ;
      sh:minCount 1 ;
    ] ;
    
    # inherits from Referable
    sh:property [
        sh:path rami:idShort ; 
        #sh:class xsd:string ;
        sh:valueDatatype xsd:string ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
        sh:severity sh:violation ;
        sh:message "..."@en ; 
    ] ;

    sh:property [
        sh:path rami:category ;
        #sh:class xsd:string ;
        sh:valueDatatype xsd:string ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
        sh:severity sh:violation ;
        sh:message "..."@en ;
    ] ;

    sh:property [
        sh:path rami:description ;
        # sh:class xsd:langString ;
        sh:valueDatatype xsd:langString ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
        sh:severity sh:violation ;
        sh:message "..."@en ;
    ] ;

    sh:property [
        sh:path rami:parent ;
        sh:class rami:Referable ; #reference to an abstract class ?? (polymorphism?)
        sh:minCount 0 ;
        sh:maxCount 1 ;
        sh:severity sh:violation ;
        sh:message "..."@en ;
    ] .